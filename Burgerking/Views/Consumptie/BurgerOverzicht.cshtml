@model Burgerking.ViewModels.BurgersViewModel
@{
    Layout = "_BurgerkingLayout";
    ViewData["Title"] = "Index";
}

<form asp-controller="Consumptie" asp-action="SearchBurger" method="get">
    <div class="form-actions no-color">
        <p>
            Zoek op Burgernaam:
            <input asp-for="BurgerSearch" />
            <input type="submit" value="Zoeken" class="btn btn-primary" />
            <a class="ml-5" asp-controller="Consumptie" asp-action="BurgerOverzicht">Alle burgers</a>
        </p>
    </div>
</form>
<div class="row">
    @foreach (var b in Model.Burgers)
    {
        <div class="card m-4" style="width: 18rem;">
            <img class="card-img-top" src="~/images/@($"{b.Naam.Replace(" ","").Replace("-","").ToLower()}.png")">
            <div class="card-body">
                <h5 class="card-title">@b.Naam</h5>
                <p class="card-text">Voor slechts @b.Prijs euro!</p>
                <p class="card-text">Bevat:</p>
                <p class="card-text">
                    <ul>
                        <li>@b.Broodje</li>
                        <li>@b.Saus</li>
                        <li>@b.Vlees</li>
                    </ul>
                </p>
                <p><a asp-controller="Consumptie" asp-action="BurgerDetails" asp-route-id="@b.Id">Details</a></p>
            </div>
        </div>
    }
</div>